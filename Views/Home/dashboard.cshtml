@model BTPSKANPUR.Models.UserCourse
@{
    ViewBag.Title = "dashboard";
}

<h1 class="text-center mb-5">Welcome <span class="text-primary">@Model.user.name</span>..!</h1>

@if (Model.bought.Count == 0)
{
    <div class="text-center">
        <div class="alert alert-danger"> No course purchased yet......!</div>
        <a class="btn btn-success rounded" href="/Home/Courses/">Purchase Now</a>
    </div>
}
else
{
    int count = 1;

    <div class="container table-responsive">
        <div class="alert alert-success rounded text-center" role="alert">
            Purchased Courses
        </div>
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th class="text-center">#</th>
                    <th class="text-center">Course Name</th>
                    <th class="text-center">Course Price</th>
                    <th class="text-center">Purchase Date</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.bought)
                {
                    <tr>
                        <th>@count</th>
                        <td>@item.courseName</td>
                        <td>@item.courseprice</td>
                        <td>@item.purchased.ToString().Split(' ')[0]</td>
                        <td class="text-center"><a class="btn btn-success" href="/Home/Details/@item.courseid">See Course</a></td>
                    </tr>
                    count = count + 1;
                }
            </tbody>
        </table>
    </div>
}

<div class="mt-3 container alert alert-warning rounded text-center font-weight-bold" role="alert">
    See Your Contact Msgs <a class="btn btn-success" href="/Home/Contacts/">Here..!</a>
</div>